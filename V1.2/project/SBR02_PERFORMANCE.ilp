(*2*)
(* Network 0 *)
(*------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------MODO EMERGENCIASi esta activo el modo de emergencia la salida de control está en cero, en cualquier otro caso esta en 1*)
LD    TRUE
EQ    MODE, B#0
STN   %M100.0
(* Network 1 *)
(*------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------MODO LOCALSi se manda a prender la bomba por el HMI la prendo*)
LD    TRUE
EQ    MODE, B#1
AND    %V3648.2
S    %M100.1
(* Network 2 *)
(*MODO LOCALSi se manda a apagar la bomba por el HMI la apago*)
LD    TRUE
EQ    MODE, B#1
ANDN    %V3648.2
R    %M100.1
(* Network 3 *)
(*MODO LOCALDetecto los pulsos de frecuencia del HMI y preparo el dato para mandarlo al generador de pulsos*)
LD    TRUE
EQ    MODE, B#1
CAL    SBR05    RHF_IncFrec, RHF_DecFrec, RHF_Des, FrecCount, RHF_CurrCount, RHF_Readed
(* Network 4 *)
(*------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------MODO REMOTOSi se manda a prender la bomba por el MODBUS la prendo*)
LD    TRUE
EQ    MODE, B#2
AND    %V3992.1
S    %M100.1
(* Network 5 *)
(*MODO REMOTOSi se manda a apagar la bomba por el MODBUS la apago*)
LD    TRUE
EQ    MODE, B#2
ANDN    %V3992.1
R    %M100.1
(* Network 6 *)
(*MODO REMOTOSi la bomba está prendida detecto los pulsos de frecuencia que le se le manda desde la web mando el dato al generador de pulsos*)
LD    TRUE
AND    %V3992.1
EQ    MODE, B#2
MOVE    M_FreqUpdate, FrecCount
(* Network 7 *)
(*------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------GENERACION DE PULSOSCualquier modo que mande a generar pulsos los generamos*)
LD    TRUE
CAL    SBR04    500, 500, FrecCount, OUT_UpFrec, OUT_DownFrec, PG_Ready
(* Network 8 *)
(*GENERACION DE PULSOSReinicio el detector de pulsos del HMI así como el byte de actualización  de frecuencia mbus para que este disponible nuevamente*)
LD    %V3648.1
MOVE    0, M_FreqUpdate
R    %M101.1
