(*2*)
(* Network 0 *)
(*YCHColoco estos valores de entrada y salida en memoria tipo V porque la memoria tipo L se encuentra agotada para nuevas implementacionesENTRADA- rdain4_IMIN -> rango mínimo de la señal de salida del sensor a conectar (0-20)- rdain4_IMAX -> rango máximo de la señal de salida del sensor a conectar (0-20)- rdain4_MMIN -> valor mínimos de la magnitud leida por el sensor- rdain4_MMAX -> valor máximo de la magnitud leída por el sensorSALIDA- rdain4_AO -> VALOR DE LA MAGNITUD LEIDA POR EL SENSOR CONECTADO AL CANAL ANALÓGICO DE ENTRADA*)
LD    TRUE
AND(
LD    TRUE
MOVE    AI4_IMin, rdain4_IMIN
MOVE    AI4_IMax, rdain4_IMAX
MOVE    AI4_MMin, rdain4_MMIN
MOVE    AI4_MMax, rdain4_MMAX
OR(
LD    TRUE
MOVE    rdain4_AO, VAR_TEMPR
)
)
(* Network 1 *)
(*multiplicación de I_MIN * 1000*)
LD    %SM0.0
MOVE    rdain4_IMIN, int0
MUL    1000, int0
(* Network 2 *)
(*multiplicación de I_MAX * 1000*)
LD    %SM0.0
MOVE    rdain4_IMAX, int1
MUL    1000, int1
(* Network 3 *)
(*escalado de la señal de entrada*)
LD    %SM0.0
LINCO    int0, int1, rdain4_MMIN, rdain4_MMAX, 1.0, %AIW8, dinttr, rdain4_AO
(* Network 4 *)
(*CASO EN QUE MMAX > MMINalarma por sensor con valor muy bajo*)
LD    TRUE
AND(
LD    TRUE
GT    rdain4_MMAX, rdain4_MMIN
LT    rdain4_AO, rdain4_MMIN
MOVE    1.0, rdain4_AO
MUL    rdain4_MMIN, rdain4_AO
OR(
LD    TRUE
GT    rdain4_MMIN, rdain4_MMAX
GT    rdain4_AO, rdain4_MMIN
MOVE    1.0, rdain4_AO
MUL    rdain4_MMIN, rdain4_AO
)
)
ST   alrmLow
(* Network 5 *)
(*CASO EN QUE MMAX > MMINalarma por sensor con valor muy alto*)
LD    TRUE
AND(
LD    TRUE
GT    rdain4_MMAX, rdain4_MMIN
GT    rdain4_AO, rdain4_MMAX
MOVE    1.0, rdain4_AO
MUL    rdain4_MMAX, rdain4_AO
OR(
LD    TRUE
GT    rdain4_MMIN, rdain4_MMAX
LT    rdain4_AO, rdain4_MMAX
MOVE    1.0, rdain4_AO
MUL    rdain4_MMAX, rdain4_AO
)
)
ST   alrmHig
(* Network 6 *)
(*activación de alarma cuando pasen 5 segundos calor fuera de rango*)
LD    alrmLow
OR    alrmHig
TON   T17, 500
ST   ALAR
ST   alr
(* Network 7 *)
(*Decirmos que la alarma es por underload*)
LD    alr
AND    alrmLow
ST   LOW
(* Network 8 *)
(*Decirmos que la alarma es por overload*)
LD    alr
AND    alrmHig
ST   HIG
